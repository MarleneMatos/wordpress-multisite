# Protect wp-config.php

<Files wp-config.php>
    Require all denied
</Files>

#For older Apache (2.2)
<Files wp-config.php>
    order allow,deny
    deny from all
</Files>

# Disable XML-RPC
<Files xmlrpc.php>
    Require all denied
</Files>

# BEGIN WordPress
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /
RewriteRule ^index\.php$ - [L]

# add a trailing slash to /wp-admin
RewriteRule ^wp-admin$ wp-admin/ [R=301,L]

RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

RewriteRule . index.php [L]
</IfModule>
# END WordPress